<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_load3"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/wel_msg"
        android:textColor="@color/lightBlue"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/iv_toMain"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/tv_msg"
        android:src="@drawable/iv_load" />

<ImageView
    android:id="@+id/iv_toMain3"
    android:layout_width="50dp"
    android:layout_height="250dp"
    android:layout_above="@+id/iv_toMain"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="16dp"
    android:src="@drawable/iv_load" />

<ImageView
    android:id="@+id/iv_toMain2"
    android:layout_width="38dp"
    android:layout_height="38dp"
    android:layout_below="@+id/iv_toMain"
    android:layout_marginTop="51dp"
    android:layout_toRightOf="@+id/tv_msg"
    android:src="@drawable/iv_load" />

</RelativeLayout>

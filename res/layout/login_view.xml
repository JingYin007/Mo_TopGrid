<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_load"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/iv_back1" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="100dp"
        android:alpha="0.7"
        android:background="@drawable/layout_border"
        android:drawableLeft="@drawable/iv_user"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/name"
        android:maxLines="1"
        android:paddingBottom="3dp"
        android:paddingLeft="7dp"
        android:paddingRight="2dp"
        android:paddingTop="3dp"
        android:textColor="@color/darkGreen"
        android:textSize="25dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="30dp"
        android:alpha="0.7"
        android:background="@drawable/layout_border"
        android:drawableLeft="@drawable/iv_pwd"
        android:gravity="center"
        android:hint="@string/password"
        android:maxLines="1"
        android:paddingBottom="3dp"
        android:paddingLeft="7dp"
        android:paddingRight="2dp"
        android:paddingTop="3dp"
        android:textColor="@color/darkGreen"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:alpha="0.7"
            android:background="@drawable/layout_border"
            android:drawableLeft="@drawable/log1"
            android:drawableRight="@drawable/log2"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="注册"
            android:textColor="@color/dark_hese" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:alpha="0.7"
            android:background="@drawable/layout_border"
            android:drawableLeft="@drawable/log1"
            android:drawableRight="@drawable/log2"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="登录"
            android:textColor="@color/dark_hese" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

</LinearLayout>